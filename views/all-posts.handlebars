<div class="posts">
  {{#each posts}}
  <article class="card">
    <div class="card-header">
      <h2>
        <a href="/post/{{id}}">{{title}}</a>
      </h2>
      <div>
        Posted by {{User.username}} on {{format_date createdAt}}
        <button class = "btn"><a class = "link" href = "/comment.js">Add a Comment</a></button>
          <button class = "btn"><a class = "link" href = "/delete.js">Delete Post</a></button>
      </div>
    </div>
    <div class="card-body">
      {{body}}
    </div>
  </article>
  {{/each}}
</div>